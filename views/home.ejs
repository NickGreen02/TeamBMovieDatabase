<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Movies DB</title>
  <link href="/css/style.css" rel="stylesheet" type="text/css">
</head>
<body>

    <nav>
      <ul>
        <li style="float:left"><a>Movie DataBase</a></li>
        
         <li><a href="http://localhost:3000/">Home</a></li>
        
      </ul>
    </nav>
<div class="entire-content">

    <div class="title">
    <h1>Movies DataBase</h1>
    </div>

<div class="container">
  <div class="search-selection">
    <form class="search" action="/" method="POST">
      <script type="text/javascript">
        function revealBudget() {
          if( document.getElementById("budgetDiv").style.display.toString() == "none"){
            document.getElementById("budgetDiv").style.display = "block";
          }else if( document.getElementById("budgetDiv").style.display.toString() == "block"){
            document.getElementById("budgetDiv").style.display = "none";
          }
        }
        
        function revealRevenue(){
          if( document.getElementById("revenueDiv").style.display.toString() == "none"){
            document.getElementById("revenueDiv").style.display = "block";
          }else if( document.getElementById("revenueDiv").style.display.toString() == "block"){
            document.getElementById("revenueDiv").style.display = "none";
          }
        }
      </script>
      <div class="search-box">
        <input class="searchBar" type="text" placeholder="Search Movies" name = "movName">
        <button><i class="searchButton" >Search</i></button>
      </div>
          <div class="filter-box"> 

        <select name = "genreName" id="genreDropdown">
          <option value="">All Genres</option>
          <option value="Action">Action</option>
          <option value="Thriller">Thriller</option>
          <option value="Comedy">Comedy</option>
          <option value="Romance">Romance</option>
          <option value="Drama">Drama</option>
      </select>
      <input class="yearBar" type="text" placeholder="Year released..." name="yearInput">
      
      <div id="budgetDiv" style="display:none">
        <input class="budgetBar" type="text" placeholder="Budget lower bound..." name="budgetLower">
        <input class="budgetBar" type="text" placeholder="Budget upper bound..." name="budgetUpper">
      </div>
      
      <div id="revenueDiv" style="display:none">
        <input class="revenueBar" type="text" placeholder="Revenue lower bound..." name="revenueLower">
        <input class="revenueBar" type="text" placeholder="Revenue upper bound..." name="revenueUpper">
      </div>
      <br>
      <button onclick="revealBudget()" type="button"  id="budgetRevealButton">Filter by budget</button>
      <button onclick="revealRevenue()" type="button"  id="revenueRevealButton">Filter by revenue</button>
    </div>
      </div>

    </div>
    </form>
      
  </div>
</body>
</html>